# 项目配置
PROJECT_NAME=送达回证自动化处理系统
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 数据库配置 (SQLite)
DATABASE_URL=sqlite:///./delivery_receipt.db
# 注意：生产环境建议使用PostgreSQL
# POSTGRES_SERVER=localhost
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_DB=delivery_receipt
# POSTGRES_PORT=5432

# Redis配置
REDIS_URL=redis://localhost:6379/0

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT配置
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# 快递查询API配置
KUAIDI_API_KEY=your_kuaidi_api_key
KUAIDI_API_SECRET=your_kuaidi_api_secret

# 环境配置
ENVIRONMENT=development
DEBUG=true

# 日志配置
LOG_LEVEL=INFO